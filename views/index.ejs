<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>User Management</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
    <div class="container mt-5">
        <h2 class="text-center">User Management System</h2>

        <!-- Add User Form -->
        <div class="card p-4 shadow-sm">
            <h4>Add User</h4>
            <form action="/addUsers" method="POST">
                <div class="mb-3">
                    <label class="form-label">Name:</label>
                    <input type="text" name="name" class="form-control" required>
                </div>
                <div class="mb-3">
                    <label class="form-label">Email:</label>
                    <input type="email" name="email" class="form-control" required>
                </div>
                <div class="mb-3">
                    <label class="form-label">Password:</label>
                    <input type="password" name="password" class="form-control" required>
                </div>
                <button type="submit" class="btn btn-primary">Add User</button>
            </form>
        </div>

        <!-- User List Table -->
        <div class="mt-4 card p-4 shadow-sm">
            <h4>All Users</h4>
            <table class="table table-bordered table-striped">
                <thead class="table-dark">
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% users.forEach(user => { %>
                        <tr>
                            <td><%= user.name %></td>
                            <td><%= user.email %></td>
                            <td>
                                <!-- Update User Form -->
                                <form action="/updateUser" method="POST" class="d-inline">
                                    <input type="hidden" name="email" value="<%= user.email %>">
                                    <input type="text" name="name" placeholder="New Name" class="form-control d-inline w-50">
                                    <input type="password" name="password" placeholder="New Password" class="form-control d-inline w-50">
                                    <button type="submit" class="btn btn-success btn-sm mt-1">Update</button>
                                </form>

                                <!-- Delete User Form -->
                                <form action="/deleteUser" method="POST" class="d-inline">
                                    <input type="hidden" name="email" value="<%= user.email %>">
                                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                </form>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>
